@page "/"
@inject IJSRuntime js
@using MudBlazor
<PageTitle>Home</PageTitle>

<div class="row">
    <div class="col-12 text-center">
        <h2 class="fw-bolder">Добро пожаловать в <span class="text-black">Госпиталь</span></h2>
    </div>
   @*  <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span> Вы не вошли в систему. Пожалуйста <a class="fw-bolder" href="/login">Нажмите</a>Вход</span>
                    </NotAuthorized>
                    <Authorized>
