@page "/login"
@using HospitalDTO.Auth
@using System.Net
<div class="row">
    <div class="col-lg-4 offset-lg-4 pt-4 border">
        <EditForm Model="@auth"  OnValidSubmit="Authenticate" FormName="LoginForm">
            <DataAnnotationsValidator />
            <div class="mb-3 text-center flex-column">
                <h3>Логин</h3>
            </div>
            <div class="mb-3">
                <label>Логин</label>
                <InputText @bind-Value="auth.Username" class="form-control" placeholder="Логин" />
                <ValidationMessage For="() => auth.Username" />
            </div>
            <div class="mb-3">
                <label>Пароль</label>
                <InputText @bind-Value="auth.Password" placeholder="Пароль" type="password" class="form-control" />
                <ValidationMessage For="() => auth.Password" />
            </div>
            <div class="mb-3 text-center">
                <span class="text-danger">@errorMessage</span>
            </div>
            <div class="mb-3 d-grid gap-2">
                <button type="submit" class="btn btn-primary">Вход</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private AuthGetTokenRequest auth = new AuthGetTokenRequest();

    private string? errorMessage;

    private async Task Authenticate()
    {
        try
        {
            var loginResponse = await _httpClient.PostAsJsonAsync<AuthGetTokenRequest>("api/Auth/LogIn", auth);

            if (loginResponse.IsSuccessStatusCode)
            {
                var userSession = await loginResponse.Content.ReadFromJsonAsync<AuthSessionToken>();
                var customStateProvider = (CustomAuthenticationStateProvider)_authStateProvider;
                await customStateProvider.UpdateAuthenticationState(userSession);
                _navigationManager.NavigateTo("/", true);
            }
            else if (loginResponse.StatusCode == HttpStatusCode.Unauthorized)
            {
                errorMessage = "Неправильное имя пользователя или пароль";
                await _js.InvokeVoidAsync("alert", "Неправильное имя пользователя или пароль");
                return;
            }
        }
        catch (Exception)
        {
            await _js.InvokeVoidAsync("alert", "API сервера не работает!!!");
        }
    }
}